<!DOCTYPE html>
<html lang="en">
  <%- include('header.ejs') %>

  <body>
    <%- include('navbar.ejs') %>

    <div role="main" class="container" style="width: 50%;">
      <br /><br />
        <% if(employees.length){ %>
            <h2>‐‐ Employee Listing ‐‐</h2>
            <br/>
            <a href="/new">Add New</a>
            <table class="table table-bordered table-striped table-dark table-hover text-white">
                <thead class="thead‐dark">
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Job Title</th>
                        <th>Department</th>
                    </tr>
                </thead>
                <tbody>
                    <% employees.forEach(function(entry){ %>
                        <tr>
                            <td>
                                <%= entry.firstName %>
                            </td>
                            <td>
                                <%= entry.lastName %>
                            </td>
                            <td>
                                <%= entry.jobTitle %>
                            </td>
                            <td>
                                <%= entry.department %>
                            </td>
                        </tr>
                    </tbody>
                    <% }) %>
                </table>
                <% }else{ %>
                    No entries!<a href="/new">Add one!</a>
                <% } %>
    </div>
    <%- include('footer.ejs') %>
    <%- include('scripts') %>
  </body>
</html>